<body class="sub_page">

  <div class="hero_area">
    <div class="bg-box">
      <img src="images/hero-bg.jpg" alt="">
    </div>
    <!-- header section strats -->
    <header class="header_section">
      <div class="container">
        <nav class="navbar navbar-expand-lg custom_nav-container">
          <a class="navbar-brand" href="/">
            <span>
              calmandcode
            </span>
          </a>
    
          <!-- Mobile menu toggle button -->
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
    
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ml-auto">
              <li class="nav-item">
                <a class="nav-link" href="/">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="products">Menu</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="about">About</a>
              </li>
              <li class="nav-item">
                <a class="nav-link cart_link" href="cart">
                  <i class="fa-solid fa-cart-shopping" style="color: #ffffff;"></i>
                </a>
              </li>
            </ul>
            <form class="form-inline ml-2 my-2 my-lg-0" action="/search" method="GET">
              <input class="form-control form-control-sm mr-sm-2" type="text" name="query" placeholder="Search Meal" aria-label="Search">
              <button class="btn my-2 my-sm-0 nav_search-btn" type="submit">
                <i class="fa fa-search" aria-hidden="true"></i>
              </button>
            </form>            
    
            <div class="user_option">
              <!-- Check if the user is logged in -->
              <% if (userIsLoggedIn) { %>
                <a class="logout_link" href="logout"><button class="btn btn-dark logout_button">Logout</button></a>
              <% } else { %>
                <a class="login_link" href="login"><button class="btn btn-dark logout_button">Login</button></a>
              <% } %>
              <div>
                <i class="fa-regular fa-circle-user" style="color: #ffffff; font-size: 20px;"></i>
                <% if (userIsLoggedIn) { %>  
                    <a href="#" style="text-decoration: none; font-size: 15px; color: #ffffff;"><b><%=user.name %></b></a>
                <% } else { %>
                    <a href="#" style="text-decoration:  none; font-size: 15px; color: #ffffff;"><b>Guest</b></a>
                <% } %>
              </div>
            </div>
          </div>
        </nav>
      </div>
    </header>
    <!-- end header section -->
  </div>

  <!-- food section -->

  <section class="food_section layout_padding">
    <div class="container">
      <div class="heading_container heading_center">
        <h2>
          Our Menu
        </h2>
      </div>

      <ul class="filters_menu">
        <li class="active" data-filter="*">All</li>
        <li data-filter=".burger">Burger</li>
        <li data-filter=".pizza">Pizza</li>
        <li data-filter=".pasta">Pasta</li>
        <li data-filter=".fries">Fries</li>
      </ul>

      <div class="filters-content">
        <div class="row grid">
          

          <% result.forEach((item)=> { %>
            <div class="col-sm-6 col-lg-4 all pizza">
              <div class="box">
                <div>
                  <div class="img-box">
                    <img src="images/<%= item.image %>" alt="">
                  </div>
                  <div class="detail-box">
                    <h5>
                      <a href="single_product?id=<%= item.id %>" style="color:white;"><%= item.name %></a>
                    </h5>
                    <p>
                      <%= item.description %>
                    </p>
                    <div class="options">
                      <% if (item.sale_price) { %>
                        <h6 style="text-decoration: line-through;">Rs. <%= item.sale_price %>
                        </h6>
                        <h6 style="text-decoration: line-through;">Rs. <%= item.price %>
                        </h6>
                        <% } else { %>
                          <h6>Rs. <%= item.price %>
                          </h6>
                      <% } %>


                            <form action="/add_cart" method="post">
                              <input type="hidden" name="id" value="<%= item.id %>">
                              <input type="hidden" name="name value=" <%=item.name%>">
                              <input type="hidden" name="price" value="<%= item.price %>">
                              <input type="hidden" name="sale_price value=" <%=item.sale_price %> ">
                              <input type="hidden" name="quantity" value="1">
                              <input type="hidden" name="image" value="<%= item.image %>">

                              <button type="submit" style="background: none; border: none;">
                                <a class="cart-icon" style="transition: transform 0.2s ease;">
                                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 456.029 456.029">
                                    <path
                                      d="M345.6,338.862c-29.184,0-53.248,23.552-53.248,53.248c0,29.184,23.552,53.248,53.248,53.248c29.184,0,53.248-23.552,53.248-53.248C398.336,362.926,374.784,338.862,345.6,338.862z" />
                                    <path
                                      d="M439.296,84.91c-1.024,0-2.56-0.512-4.096-0.512H112.64l-5.12-34.304C104.448,27.566,84.992,10.67,61.952,10.67H20.48C9.216,10.67,0,19.886,0,31.15c0,11.264,9.216,20.48,20.48,20.48h41.472c2.56,0,4.608,2.048,5.12,4.608l31.744,216.064c4.096,27.136,27.648,47.616,55.296,47.616h212.992c26.624,0,49.664-18.944,55.296-45.056l33.28-166.4C457.728,97.71,450.56,86.958,439.296,84.91z" />
                                    <path
                                      d="M215.04,389.55c-1.024-28.16-24.576-50.688-52.736-50.688c-29.696,1.536-52.224,26.112-51.2,55.296c1.024,28.16,24.064,50.688,52.224,50.688h1.024C193.536,443.31,216.576,418.734,215.04,389.55z" />
                                  </svg>
                                </a>
                              </button>
                            </form>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <% }) %>



        </div>
      </div>
      <div class="btn-box">
        <a href="">
          View More
        </a>
      </div>
    </div>
  </section>

