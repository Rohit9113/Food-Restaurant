<!DOCTYPE html>
<html>

<head>
    <!-- Basic -->
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <!-- Mobile Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <!-- Site Metas -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <meta name="keywords" content="" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <link rel="shortcut icon" href="images/favicon.png" type="">
    <title>calmandcode</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" type="text/css"
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" />

    <!-- AOS CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css">

    <!-- Custom CSS -->
    <link href="css/main.css" rel="stylesheet" />
</head>

<body class="sub_page">
    <div class="loginCard justify-content-center" data-aos="fade-up" data-aos-duration="3000">
        <div>
            <h1 class="text-center container col-6" id="myheadtxt"> User Login</h1>
        </div>
        <div class="container col-6">
            <form action="/login" method="POST">
                <div class="input-group mb-4 mt-2">
                    <input type="text" class="form-control bg-transparent" id="loginmail" name="username"
                        placeholder="Enter The Username" required>
                </div>
                <div class="input-group mb-4">
                    <input type="password" class="form-control bg-transparent" id="loginpassword" name="password"
                        placeholder="Enter The Password" required>
                </div>
                <div class="center">
                    <button type="submit" class="btn btn-dark mb-3 bg-transparent">Login</button>
                </div>
            </form>
            <p style="color: white;">Don't have an account? <a href="/signup"><i class="fa-solid fa-right-to-bracket"></i><b> Sign Up</b></a></p>
        </div>
    </div>
    <!-- Display error message if it exists in the session -->
    <% if (typeof message !='undefined' ) { %>
        <div class="alert alert-danger mt-3">
            <h5>
                <%= message %>
            </h5>
        </div>
    <% } %>

    <!-- JavaScript libraries (jQuery, Popper.js, Bootstrap) -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
        integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
        crossorigin="anonymous">
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.min.js"
        integrity="sha384-9aJ4n5F5Jm5fS9SW1zv+ROO/fJv2jcW5g1S5b5Qm8w5tZhi1t9zQgqo8w2tmPGf5U"
        crossorigin="anonymous">
    </script>

    <!-- AOS JavaScript initialization -->
    <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
    <script>
        AOS.init();
    </script>
</body>

</html>
